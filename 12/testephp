<?php


class Cidade {
 public $id;
 public $nome;
 public Estado $estado;

 function __construct($id, $nome, $estado){
    $this->id = $id;
    $this->nome = $nome;
 }
 
 }

class Estado {
    private $id;
    private $uf;
    
    function __construct($id, $uf){
       $this->id = $id;
       $this->uf= $uf;
    }
}
$bahia = new Estado(17, 'BA');
$minas = new Estado(31, 'MG');